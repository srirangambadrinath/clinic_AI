{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* ðŸ›‘ CRITICAL FIX: Add 'vite/client' types ðŸ›‘
       This tells TypeScript how to handle import.meta.env, resolving the TS2339 error. */
    "types": ["vite/client"]
  },
  
  /* The include path is correct */
  "include": ["./**/*.ts", "./**/*.tsx"]
}
